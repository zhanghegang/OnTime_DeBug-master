<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">#ffffff</item>
        <item name="textColor">#fff</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowReenterTransition">@transition/explode</item>
        <item name="android:windowAnimationStyle" >@style/ManiActivityAnim</item>

    </style>


    <style name="ManiActivityAnim" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/two_in</item>
        <item name="android:activityOpenExitAnimation">@anim/one_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/ont_in</item>
        <item name="android:activityCloseExitAnimation">@anim/two_out</item>
    </style>
    <style name="ThemeNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">#000</item>
        <item name="textColor">#000</item>
        <item name="android:windowAnimationStyle" >@style/ManiActivityAnim</item>
    </style>
    <style name="OtherActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle" >@style/ManiActivityAnim</item>
    </style>

</resources>
