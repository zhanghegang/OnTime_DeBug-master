<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">#ffffff</item>
        <item name="textColor">#fff</item>
<item name="android:listDivider">@drawable/edit_splite</item>
        <item name="android:windowAnimationStyle" >@style/ManiActivityAnim</item>

    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:windowBackground">@color/theme_dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowNoTitle">true</item><!--隐藏标题栏-->
        <item name="android:background">@color/theme_dialog</item>

    </style>

    <style name="ManiActivityAnim" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/two_in</item>
        <item name="android:activityOpenExitAnimation">@anim/one_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/ont_in</item>
        <item name="android:activityCloseExitAnimation">@anim/two_out</item>
    </style>
    <style name="ThemeNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">#000</item>
        <item name="textColor">#000</item>
        <item name="android:windowAnimationStyle" >@style/ManiActivityAnim</item>
    </style>
    <style name="OtherActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle" >@style/ManiActivityAnim</item>
    </style>

</resources>
