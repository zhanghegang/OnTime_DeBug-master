<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/otherreg"
    tools:context="zhanghegang.com.bawei.onetime.OtherRegActivity">
    <LinearLayout
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_forget_back"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/left_jiantou"
            />
        <TextView
            android:id="@+id/tv_forget_hava"
            android:gravity="right"
            android:textColor="@color/reg_white"
            android:textSize="@dimen/add_acount"
            android:text="已有账号？"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_other_middle"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:src="@drawable/reg_middle"
        />
    <LinearLayout

        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:dividerPadding="10dp"

        android:background="@drawable/edit_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_other_middle"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/edit_splite"
        android:id="@+id/ll_edit"
        android:layout_width="@dimen/x750"
        android:layout_height="@dimen/y200">
        <LinearLayout
            android:showDividers="middle"
            android:divider="@drawable/edit_splite"
          android:padding="@dimen/x20"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80">
            <EditText
                android:background="@null"
                android:layout_marginRight="@dimen/x20"
                android:textColor="@color/edit_name"
                android:textColorHint="@color/edit_name"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:hint="86+"
                />
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                android:hint="请输入手机号"
                android:textColorHint="@color/edit_name"
                android:layout_marginLeft="4dp"
                android:id="@+id/et_forgert_phone"
                android:textSize="14sp"
                android:background="@null"
                android:layout_weight="1"
                android:textColor="#fff"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_gainVercode"
                android:textColor="@color/edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80">

            <EditText
                android:textColorHint="@color/edit_name"
                android:hint="请输入验证码"
                android:layout_marginLeft="4dp"
                android:textSize="14sp"

                android:id="@+id/et_pass"
                android:background="@null"
                android:textColor="#fff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:text="下一步"
        android:background="@drawable/btn_other_reg_bg"
        android:id="@+id/btn_foget_next"
        android:layout_below="@+id/ll_edit"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/x550"
        android:layout_height="40dp" />



    <TextView
        android:textColor="#fff"
        android:id="@+id/tv_auto_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_foget_next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="游 客 登 录" />
</RelativeLayout>
