<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x450">
<ImageView
    android:scaleType="centerCrop"
    android:src="@drawable/userinterface_head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y300" />
    <LinearLayout
        android:padding="@dimen/x15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/user_back"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/left_jiantou"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="myname"
            android:id="@+id/user_interface_name"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/user_head_name"
            />
        <ImageView
            android:layout_marginRight="@dimen/x20"
            android:id="@+id/user_share"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/share_hot"
            />
        <ImageView
            android:id="@+id/user_msg"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/hot_msg"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/x10"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_user_interface_img"
            android:layout_marginBottom="@dimen/x40"
            app:riv_corner_radius="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/start1"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120" />
        <LinearLayout
         android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/x5"
                android:layout_marginTop="@dimen/x60"
                android:showDividers="middle"
                android:divider="@drawable/setting_splite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="233333 粉丝"
                    android:id="@+id/tv_fans"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="233333 关注"
                    android:id="@+id/tv_attention"
                    />

            </LinearLayout>
            <TextView
android:background="@drawable/attention_selector_bg"
                android:id="@+id/tv_user_attention"
                android:gravity="center"
                android:text="+关注"
                android:textColor="@color/main_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50" />
            </LinearLayout>


        <LinearLayout
            android:padding="@dimen/x5"
            android:background="@drawable/user_interface_bg"
            android:gravity="center"
            android:layout_marginTop="@dimen/x60"
            android:orientation="vertical"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y90">
            <ImageView
                android:id="@+id/iv_user_praise"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:src="@drawable/user_praise_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_praise_num"
                android:text="111"
                />
        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/tab_attention"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorColor="@color/main_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="关注"
            />
        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            />
    </android.support.design.widget.TabLayout>
</LinearLayout>