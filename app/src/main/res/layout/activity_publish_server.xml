<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="zhanghegang.com.bawei.onetime.PublishServerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y500"
        android:background="@drawable/start5"
        >
        <RelativeLayout
            android:padding="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
android:id="@+id/publish_back"
                    android:src="@drawable/mis_btn_back"
                    />
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/hot_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    />
            </LinearLayout>
            <TextView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="预览"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/hot_white"
                />
        </RelativeLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/pubilish_cover"
        android:scaleType="centerCrop"
        android:src="@drawable/start"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x150" />
    <TextView
        android:id="@+id/tv_set_cover"
        android:padding="@dimen/x5"
        android:gravity="center"
       android:textSize="13sp"
        android:textColor="@color/hot_white"
        android:text="设置封面"
        android:background="@color/main_head"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content" />
</LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/publish_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80">
        <TextView
            android:layout_marginLeft="@dimen/x50"
            android:textColor="@color/hot_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同步分享至——"
            />
        <LinearLayout
android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_qq_kongjian"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/qq_kongjian"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50" />
                <TextView
                    android:textColor="@color/hot_white"
                    android:textSize="@dimen/x20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ空间"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_friend"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/friend"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50" />
                <TextView
                    android:textColor="@color/hot_white"
                    android:textSize="@dimen/x20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textColor="@color/hot_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ——"
            android:layout_marginRight="@dimen/x50"
            />
        <ImageView
            android:layout_marginRight="@dimen/x50"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x60"
            android:id="@+id/iv_suo"
            android:src="@drawable/suo"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/publish_edit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:padding="@dimen/x20"
            android:gravity="left"
            android:textSize="@dimen/x25"
         android:id="@+id/et_video_dec"
            android:hint="点击输入视频简介"
            android:textColorHint="@color/hot_white"
            android:textColor="@color/hot_white"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Button
            android:id="@+id/btn_aite"
android:layout_marginBottom="@dimen/x5"
            android:textColor="@color/hot_white"
            android:background="@drawable/btn_aite"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x70"
            android:text=" @ "
            />
        <TextView
            android:gravity="center"
            android:text="发布"
            android:id="@+id/tv_publish_video"
            android:textColor="@color/hot_white"
            android:background="@color/main_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80" />
    </LinearLayout>
</LinearLayout>
